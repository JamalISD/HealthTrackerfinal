<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HealthTrack+ Dashboard"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Exercise Tile -->

    <!-- Nutrition Tile -->

    <!-- Mental Well-being Tile -->

    <Button
        android:id="@+id/exerciseTile"
        android:layout_width="176dp"
        android:layout_height="93dp"
        android:layout_below="@+id/dashboardTitle"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="#87CEFA"
        android:onClick="onExerciseTileClick"
        android:text="Exercise" />

    <Button
        android:id="@+id/nutritionTile"
        android:layout_width="162dp"
        android:layout_height="105dp"
        android:layout_below="@+id/dashboardTitle"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/exerciseTile"
        android:background="#90EE90"
        android:onClick="onNutritionTileClick"
        android:text="Nutrition" />

    <Button
        android:id="@+id/mentalWellBeingTile"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_below="@+id/exerciseTile"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="16dp"
        android:background="#FFD700"
        android:onClick="onMentalWellBeingTileClick"
        android:text="Mental Well-being" />

    <Button
        android:id="@+id/caloriesTile"
        android:layout_width="171dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="386dp"
        android:background="#FFA07A"
        android:onClick="onCaloriesTileClick"
        android:text="Calories" />

    <uses-permission android:name="android.permission.INTERNET" />


</RelativeLayout>
