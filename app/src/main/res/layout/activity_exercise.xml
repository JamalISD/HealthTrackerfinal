<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseActivity">

    <TextView
        android:id="@+id/exerciseTextView"
        android:layout_width="240dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="83dp"
        android:text="Current Exercise: "
        android:textSize="24sp" />

    <Button
        android:id="@+id/newWorkoutButton"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exerciseTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="169dp"
        android:onClick="onNewWorkoutButtonClick"
        android:text="New Workout" />

    <ImageView
        android:id="@+id/exerciseImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exerciseTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Add this TextView below exerciseTextView in your RelativeLayout -->
    <TextView
        android:id="@+id/setsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exerciseTextView"
        android:layout_marginTop="26dp"
        android:text="Number of Sets: "
        android:textSize="24sp" />

    <Button
        android:id="@+id/workoutCompletedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setsTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="461dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="81dp"
        android:onClick="onCompletedWorkoutButtonClick"
        android:text="Workout Completed" />


</RelativeLayout>
